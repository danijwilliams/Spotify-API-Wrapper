{
    "name": "jwilsson/spotify-web-api-php",
    "description": "A PHP wrapper for Spotify's Web API.",
    "type": "library",
    "license": "MIT",
    "keywords": ["spotify"],
    "homepage": "https://github.com/jwilsson/spotify-web-api-php",
    "authors": [
        {
            "name": "Jonathan Wilsson",
            "email": "jonathan.wilsson@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.0",
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SpotifyWebAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/phpunit/MockObject/Builder/LegacyMatch.php",
            "tests/phpunit/MockObject/Builder/NamespaceMatch.php",
            "tests/phpunit/MockObject/Builder/ParametersMatch.php",
            "tests/phpunit/MockObject/InvocationMocker.php"
        ],
        "exclude-from-classmap": [
            "vendor/phpunit/phpunit-mock-objects/src/Builder/Match.php",
            "vendor/phpunit/phpunit-mock-objects/src/Builder/NamespaceMatch.php",
            "vendor/phpunit/phpunit-mock-objects/src/Builder/ParametersMatch.php",
            "vendor/phpunit/phpunit-mock-objects/src/InvocationMocker.php"
        ]
    },
    "scripts": {
        "test": "phpcs src -v && phpunit"
    }
}
